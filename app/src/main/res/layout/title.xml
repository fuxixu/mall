<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_backgroud"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vp_title_icon"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="50sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="合计："
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/tv_title_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="¥2.5"
            android:textColor="#fff" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_title_account"
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="结算"
        android:textColor="#fff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/selector_btn"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">
        <Button
            android:id="@+id/btn_title_cart"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_gravity="center"
            android:text="购物车"
            android:textColor="#fff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/selector_btn"
            />
        <Button
            android:id="@+id/btn_title_order"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_gravity="center"

            android:text="我的订单"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/selector_btn"
           />
    </LinearLayout>

</LinearLayout>