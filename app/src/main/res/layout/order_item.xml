<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_order_item_bg"
    android:textColor="@color/white"
    >


    <TextView
        android:textColor="@color/white"
        android:id="@+id/order_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/dimenx_30dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimenx_30dp"
            />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimenx_30dp"
            />

    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/oder_all_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/dimenx_30dp"
        />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/oder_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/order_item_status_bg"
        android:textSize="@dimen/dimenx_34dp"
       />


</LinearLayout>