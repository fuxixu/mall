<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:focusableInTouchMode="true"
    android:orientation="vertical" >
<!--    android:background="@color/white"-->

<!--    android:scaleType="centerCrop"-->
<!--    app:cardCornerRadius="@dimen/dimenx_20dp"-->

<!--    app:cardCornerRadius="@dimen/dimenx_20dp"-->
<!--    android:scaleType="centerCrop"-->

<!--    最外层的垂直布局-->

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--产品的图片展示-->
<!--    <LinearLayout-->
<!--        android:orientation="vertical"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"-->
<!--        >-->


        <ImageView
            android:id="@+id/fruit_image"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/display_chips"/>



<!--    </LinearLayout>-->
<!--两个背景-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="132dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/display_item_bg_white"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/display_item_bg"
                android:alpha="37"/>

            <!--图片以下的布局-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/display_item_bg">
        <!--        产品名字和参数-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
<!--            android:layout_gravity="center_horizontal"-->


            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/dimenx_22dp"
                />

            <TextView
                android:id="@+id/product_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="@dimen/dimenx_22dp"
               />
<!--包含价格和购物车-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥2.5"
            android:textColor="@color/display_item_price"
            android:textSize="@dimen/dimenx_30dp"
            />
            <!--购物车-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/display_item_cart"

                />
                <TextView

                    android:layout_width="@dimen/dimenx_10dp"
                    android:layout_height="@dimen/dimenx_10dp"
                    android:textSize="@dimen/dimenx_8dp"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#fff"
                    android:layout_gravity="right"
                    android:background="@drawable/cart_shoppingcart_number"
                    />
        </FrameLayout>

        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        </FrameLayout>
    </LinearLayout>



</LinearLayout>